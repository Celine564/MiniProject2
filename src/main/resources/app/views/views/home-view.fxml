<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxWidth="-Infinity" minWidth="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.HomeController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="310.0" style="-fx-background-color: #921212;">
            <children>
                <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="60.0" layoutY="80.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/orders.jpg" />
                    </image>
                </ImageView>
                <Label layoutX="45.0" layoutY="261.0" text="Company Managment" textFill="WHITE">
                    <font>
                        <Font name="Book Antiqua" size="22.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="307.0" prefHeight="400.0" prefWidth="336.0" style="-fx-background-color: beige;">
            <children>

                <Button fx:id="salesAndOffer" layoutX="81.0" layoutY="152.0" mnemonicParsing="false" onAction="#openSalesAndOffersManagement" prefHeight="34.0" prefWidth="162.0" text="Sales &amp; Offering" textAlignment="CENTER" textFill="#921212">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="orderManagement" layoutX="81.0" layoutY="223.0" mnemonicParsing="false" onAction="#openOrderManagement" prefHeight="34.0" prefWidth="162.0" text="Order Management" textFill="#921212">

                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <Button fx:id="PersonsManagement" layoutX="81.0" layoutY="82.0" mnemonicParsing="false" onAction="#openPersonsManagement" prefHeight="34.0" prefWidth="162.0" text="Customer Management" textFill="#921212">   <font>
                    <Font name="System Bold" size="12.0" />
                </font>
                </Button>
            <Button layoutX="81.0" layoutY="294.0" mnemonicParsing="false" onAction="#openSupplierManagement" prefHeight="34.0" prefWidth="162.0" text="Supplier" textFill="#921212">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            </children>
        </AnchorPane>
    </children>

</AnchorPane>
